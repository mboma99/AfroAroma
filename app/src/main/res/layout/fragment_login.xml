<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.LoginFragment">
    <ImageView
        android:id="@+id/wallpaperImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="60dp">

                <TextView
                    android:id="@+id/txtWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_bold"
                    android:text="@string/afroaroma"
                    android:letterSpacing="0.2"
                    android:textColor="#000000"
                    android:textSize="40sp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_light"
                    android:letterSpacing="0.08"
                    android:text="SWEET AROMAS LIKE AFRICA"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:lineSpacingExtra="15dp"
                    android:layout_marginTop="50dp"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="278dp"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_login"
                    android:elevation="20dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="#505050"
                    android:layout_marginTop="50dp"/>



                <EditText
                    android:id="@+id/password"
                    android:layout_width="284dp"
                    android:layout_height="52dp"
                    android:background="@drawable/edit_text_login"
                    android:elevation="20dp"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:layout_marginTop="30dp"/>



                <TextView
                    android:id="@+id/textError"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/outfit_regular"
                    android:letterSpacing="0.1"
                    android:textAlignment="center"
                    android:textColor="@color/dark_gray"
                    android:textSize="18dp"
                    android:layout_marginTop="20dp"/>


                <Button
                    android:id="@+id/btnLoginPage"
                    android:layout_width="238dp"
                    android:layout_height="59dp"
                    android:background="@drawable/round_dark_cream_button"
                    android:clickable="true"
                    android:fontFamily="@font/outfit_light"
                    android:letterSpacing="0.1"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/txtNoAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:fontFamily="@font/outfit_light"
                    android:letterSpacing="0.1"
                    android:text="@string/don_t_have_an_account"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>