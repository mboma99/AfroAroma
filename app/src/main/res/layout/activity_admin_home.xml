<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AdminHomeActivity"
    android:background="@drawable/background_admin">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="228dp"
        android:layout_height="93dp"
        android:fontFamily="@font/outfit_light"
        android:letterSpacing="0.09"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.223"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="451dp"
        android:layout_height="579dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/textViewLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/outfit_light"
        android:letterSpacing="0.1"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/viewMenu"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="319dp"
        android:layout_height="68dp"
        android:background="@drawable/round_white_button"
        android:drawableLeft="@drawable/menu_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit_regular"
        android:letterSpacing="0.2"
        android:paddingLeft="10dp"
        android:text="@string/view_menu"
        android:onClick="redirec"
        android:textAlignment="viewStart"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.244" />

    <Button
        android:id="@+id/viewOrders"
        android:layout_width="319dp"
        android:layout_height="68dp"
        android:background="@drawable/round_white_button"
        android:drawableLeft="@drawable/drink_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit_regular"
        android:letterSpacing="0.2"
        android:text="@string/view_orders"
        android:textAlignment="viewStart"
        android:paddingLeft="10dp"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.4"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/viewPromotions"
        android:layout_width="319dp"
        android:layout_height="68dp"
        android:background="@drawable/round_white_button"
        android:drawableLeft="@drawable/promo_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit_regular"
        android:letterSpacing="0.2"
        android:text="@string/promotions"
        android:textAlignment="viewStart"
        android:paddingLeft="10dp"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.55"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/viewFeedback"
        android:layout_width="319dp"
        android:layout_height="68dp"
        android:background="@drawable/round_white_button"
        android:drawableLeft="@drawable/feedback_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/outfit_regular"
        android:letterSpacing="0.2"
        android:text="@string/feedback"
        android:textAlignment="viewStart"
        android:paddingLeft="10dp"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.72"
        style="?android:attr/borderlessButtonStyle"/>



</androidx.constraintlayout.widget.ConstraintLayout>